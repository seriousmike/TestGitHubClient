<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="CommitsListTableAlike">
        <item name="android:textSize">12sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingTop">@dimen/commit_span_margin_vertical</item>
        <item name="android:paddingBottom">@dimen/commit_span_margin_vertical</item>
        <item name="android:paddingLeft">@dimen/commit_span_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/commit_span_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/commit_span_border_margin</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="CommitsListTableAlike.TH">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/section_text_primary</item>
        <item name="android:background">@color/color_background_base</item>
    </style>


    <style name="TextButton">
        <item name="android:background">@drawable/text_button_background</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>

