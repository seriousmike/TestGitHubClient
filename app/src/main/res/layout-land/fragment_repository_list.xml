<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="0dp"
              android:orientation="vertical"
              tools:context="ru.seriousmike.testgithubclient.activities.TestActivity">

    <TextView
        android:text="username"
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/repo_list_avatar"
            android:layout_marginRight="@dimen/repo_list_owner_pad"
            android:layout_height="wrap_content"
            />


        <TextView
            android:text="repository"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="owner"
            android:layout_width="@dimen/repo_list_owner"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="frk"
            android:layout_width="@dimen/repo_list_forks"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="wch"
            android:layout_width="@dimen/repo_list_watchers"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/listRepositories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
